<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Views will go here -->
        <record id="view_product_template_form_inherit_customization" model="ir.ui.view">
            <field name="name">product.template.form.inherit.customization</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='options']//span[hasclass('d-inline-flex')]" position="inside">
                    <field name="is_accessory"/>
                    <label for="is_accessory" string="Is Accessory?"/>
                    <field name="has_accessory"/>
                    <label for="has_accessory" string="Has Accessory?"/>
                </xpath>
                <xpath expr="//notebook//page[last()]" position="after">
                    <page string="Accessories" invisible="is_accessory or not has_accessory" >
                        <group name="accessories">
                            <field name="accessory_line_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="product_id"/>
                                        <field name="quantity"/>
                                    </group>
                                </form>
                            </field>
                        </group>
                    </page>

                </xpath>
            </field>
        </record>
    </data>
</odoo>
